<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:openMultiCam"
        xmlns:shp="clr-namespace:openMultiCam.Utils"
        mc:Ignorable="d"
        x:Class="openMultiCam.LoadingScreen"
        Title="LoadingScreen" Height="250" Width="250" ResizeMode="NoResize" Icon="Resources/omc_task_icon.ico">
    <Grid>
        <Rectangle x:Name="progressBackground" HorizontalAlignment="Left" Height="221" StrokeThickness="2" VerticalAlignment="Top" Width="244" Fill="#FFE6E6E6"/>
        <TextBlock x:Name="messageField" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Height="98" Width="214" Margin="10,10,0,0" Foreground="#FF646464"/>
        <Label x:Name="progressLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="-" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Height="98" Width="224" FontSize="32" FontWeight="Bold" Foreground="#FF9E9E9E"/>
    </Grid>
</Window>
